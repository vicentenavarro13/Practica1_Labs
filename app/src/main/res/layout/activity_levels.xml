<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C191D">

    <!-- Toolbar superior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="393dp"
        android:layout_height="85dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#8AD1D6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Toolbar inferior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#8AD1D6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo ImageView -->

    <!-- Título TEMAS -->


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="259dp"
        android:layout_height="87dp"
        app:srcCompat="@drawable/mortezlogo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="-15dp" />

    <!-- Botón Prehistoria -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/exo"
        android:text="TEMAS"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2" />

    <Button
        android:id="@+id/prehistory"
        android:layout_width="214dp"
        android:layout_height="49dp"
        android:text="Prehistoria"
        android:backgroundTint="#365E69"
        android:fontFamily="@font/exo"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Edad Antigua -->
    <Button
        android:id="@+id/button2"
        android:layout_width="214dp"
        android:layout_height="49dp"
        android:backgroundTint="#365E69"
        android:fontFamily="@font/exo"
        android:text="Edad Antigua"
        app:layout_constraintTop_toBottomOf="@id/prehistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Edad Media -->
    <Button
        android:id="@+id/button3"
        android:layout_width="214dp"
        android:layout_height="49dp"
        android:backgroundTint="#365E69"
        android:fontFamily="@font/exo"
        android:text="Edad Media"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Edad Moderna -->
    <Button
        android:id="@+id/button4"
        android:layout_width="214dp"
        android:layout_height="49dp"
        android:backgroundTint="#365E69"
        android:fontFamily="@font/exo"
        android:text="Edad Moderna"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Edad Contemporánea -->
    <Button
        android:id="@+id/button5"
        android:layout_width="214dp"
        android:layout_height="49dp"
        android:backgroundTint="#365E69"
        android:fontFamily="@font/exo"
        android:text="Edad Contemporánea"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
